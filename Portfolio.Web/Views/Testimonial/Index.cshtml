@model List<Testimonial>
@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover table-striped align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Ad Soyad</th>
            <th>Ünvan</th>
            <th>İçerik</th>
            <th>Değerlendirme</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td><img src="@item.ImageUrl" style="height:75px;width:75px; object-fit:cover;" /></td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>@item.Comment</td>
                <td>@item.Review</td>
                <td>
                    <button onclick="deletedTestimonial(@item.TestimonialId)" class="btn btn-sm btn-danger me-1">Sil</button>
                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-info text-white">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Testimonial/CreateTestimonial" class="btn btn-primary mt-3">Yeni Referans Oluştur</a>

<script>
    function deletedTestimonial(id){
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href="/Testimonial/DeleteTestimonial/"+id;
            }
        });
    }
</script>

