@model List<About>
@{
    ViewData["Title"] = "Hakkında";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ünvan</th>
        <th>Doğum Günü</th>
        <th>Web Site</th>
        <th>Telefon</th>
        <th>Şehir</th>
        <th>Mezuniyet</th>
        <th>E-mail</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.BirthDate.ToString("dd.MM.yyyy")</td>
            <td>
                @if (!string.IsNullOrEmpty(item.WebSite))
                {
                    <a href="@item.WebSite" target="_blank">@item.WebSite</a>
                }
            </td>
            <td>@item.PhoneNumber</td>
            <td>@item.City</td>
            <td>@item.Graduation</td>
            <td>@item.Email</td>
            <td>
                @if (item.IsAvailable)
                {
                    <span class="text-success"><i class="fa-solid fa-circle-check"></i> Aktif</span>
                }
                else
                {
                    <span class="text-danger"><i class="fa-solid fa-circle-xmark"></i> Pasif</span>
                }
            </td>
            <td>
                <button onclick="deletedAbout(@item.AboutId)" class="btn btn-outline-danger">
                    Sil</button>
                <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/About/CreateAbout" class="btn btn-outline-primary">Yeni Hakkında Oluştur</a>

<script>
    function deletedAbout(id){
            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {
      window.location.href="/About/DeleteAbout/"+id;
      }
    });
    }
</script>

