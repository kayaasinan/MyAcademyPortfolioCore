@model List<SocialMedia>
@{
    ViewData["Title"] = "Sosyal Medya";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover table-striped align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Platform Adı</th>
            <th>Platform Url</th>
            <th>Platform İkonu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.PlatformName</td>
                <td>@item.PlatformUrl</td>
                <td>@item.PlatformIcon</td>
                <td>
                    <button onclick="deletedSocialMedia(@item.SocialMediaId)" class="btn btn-sm btn-danger me-1">Sil</button>
                    <a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-sm btn-info text-white">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/SocialMedia/CreateSocialMedia" class="btn btn-primary mt-3">Yeni Sosyal Medya Bilgisi Oluştur</a>

<script>
    function deletedSocialMedia(id){
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href="/SocialMedia/DeleteSocialMedia/"+id;
            }
        });
    }
</script>






