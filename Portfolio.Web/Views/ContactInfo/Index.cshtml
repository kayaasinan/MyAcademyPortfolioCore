@model List<ContactInfo>
@{
    ViewData["Title"] = "İletişim Bilgileri";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover table-striped align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Adress</th>
            <th>Telefon</th>
            <th>E-mail</th>
            <th>Konum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Address</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>
                    <iframe src="@item.MapUrl" width="75" height="75" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </td>
                <td>
                    <button onclick="deletedContactInfo(@item.ContactInfoId)" class="btn btn-sm btn-danger me-1">Sil</button>
                    <a href="/ContactInfo/UpdateContactInfo/@item.ContactInfoId" class="btn btn-sm btn-info text-white">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/ContactInfo/CreateContactInfo" class="btn btn-primary mt-3">Yeni İletişim Bilgisi Oluştur</a>

<script>
    function deletedContactInfo(id){
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href="/ContactInfo/DeleteContactInfo/"+id;
            }
        });
    }
</script>




