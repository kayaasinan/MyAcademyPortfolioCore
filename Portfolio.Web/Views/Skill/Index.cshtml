@model List<Skill>
@{
    ViewData["Title"] = "Yeteneklerim Sayfası";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}
@{

}
<table class="table table-bordered table-hover table-striped align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Yetenek</th>
            <th>Oran</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string progressbarColor = item.Percentage >= 85 ? "bg-success" :
            item.Percentage >= 70 ? "bg-info" :
            item.Percentage >= 55 ? "bg-warning" :
            "bg-danger";

            count++;
            <tr>
                <th>@count</th>
                <td>@item.Title</td>
                <td style="min-width: 150px;">
                    <div class="d-flex align-items-center gap-2">
                        <div class="progress flex-grow-1" style="height: 20px;">
                            <div class="progress-bar @progressbarColor" style="width: @item.Percentage%"></div>
                        </div>
                        <span class="fw-bold">@item.Percentage / 100</span>
                    </div>
                </td>
                <td>
                    <button onclick="deletedSkill(@item.SkillId)" class="btn btn-sm btn-danger me-1">Sil</button>
                    <a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-sm btn-info text-white">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Skill/CreateSkill" class="btn btn-primary mt-3">Yeni Yetenek Oluştur</a>

<script>
    function deletedSkill(id){
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href="/Skill/DeleteSkill/"+id;
            }
        });
    }
</script>


