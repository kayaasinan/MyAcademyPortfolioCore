@model List<Skill>
@{
    ViewData["Title"] = "Yeteneklerim Sayfası";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Yetenek</th>
        <th>Oran</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.Percentage</td>
            <td>
                <button onclick="deletedSkill(@item.SkillId)" class="btn btn-outline-danger">
                    Sil
                </button>
                <a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Skill/CreateSkill" class="btn btn-outline-primary">Yeni Yetenek Oluştur</a>

<script>
    function deletedSkill(id){
            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {
      window.location.href="/Skill/DeleteSkill/"+id;
      }
    });
    }
</script>



