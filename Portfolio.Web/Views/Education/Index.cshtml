@model List<Education>
@{
    ViewData["Title"] = "Eğitimlerim Sayfası";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover table-striped align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Okul Adı</th>
            <th>Bölüm Adı</th>
            <th>Başlama Yılı</th>
            <th>Mezuniyet Yılı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.SchoolName</td>
                <td>@item.Department</td>
                <td>@item.StartYear</td>
                <td>@item.EndYear</td>
                <td>@item.Description</td>
                <td>
                    <button onclick="deletedEducation(@item.EducationId)" class="btn btn-sm btn-danger me-1">Sil</button>
                    <a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-sm btn-info text-white">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Education/CreateEducation" class="btn btn-primary mt-3">Yeni Eğitim Bilgisi Oluştur</a>

<script>
    function deletedEducation(id){
            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {
      window.location.href="/Education/DeleteEducation/"+id;
      }
    });
    }
</script>

