@model List<Education>
@{
    ViewData["Title"] = "Eğitimlerim Sayfası";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Okul Adı</th>
        <th>Bölüm Adı</th>
        <th>Başlama Yılı</th>
        <th>Mezuniyet Yılı</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.SchoolName</td>
            <td>@item.Department</td>
            <td>@item.StartYear</td>
            <td>@item.EndYear</td>
            <td>@item.Description</td>
            <td>
                <button onclick="deletedEducation(@item.EducationId)" class="btn btn-outline-danger">
                    Sil
                </button>
                <a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Education/CreateEducation" class="btn btn-outline-primary">Yeni Eğitim Bilgisi Oluştur</a>

<script>
    function deletedEducation(id){
            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {
      window.location.href="/Education/DeleteEducation/"+id;
      }
    });
    }
</script>

