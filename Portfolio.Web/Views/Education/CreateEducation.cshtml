@model Education
@{
    ViewData["Title"] = "Eğitim Bilgisi Oluşturma";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <div class="row g-3">

        <div class="col-md-6">
            <label asp-for="SchoolName" class="form-label">Okul Adı</label>
            <input type="text" class="form-control" asp-for="SchoolName" />
            <span asp-validation-for="SchoolName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Department" class="form-label">Bölüm Adı</label>
            <input type="text" class="form-control" asp-for="Department" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
         <div class="col-md-6">
            <label asp-for="StartYear" class="form-label">Başlama Yılı</label>
            <input type="text" class="form-control" asp-for="StartYear" />
            <span asp-validation-for="StartYear" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="EndYear" class="form-label">Mezuniyet Yılı</label>
            <input type="text" class="form-control" asp-for="EndYear" />
            <span asp-validation-for="EndYear" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <input type="text" class="form-control" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-outline-primary">Oluştur</button>
        </div>

    </div>
</form>

