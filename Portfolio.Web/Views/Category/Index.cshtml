@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-striped table-hover table-bordered align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kategori Adı</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.CategoryName</td>
                <td>
                    <button onclick="deletedCategory(@item.CategoryId)" class="btn btn-sm btn-danger me-1" ;">
                        <i class="fas fa-trash-alt"></i> Sil
                    </button>
                    <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-sm btn-info text-white">
                        <i class="fas fa-edit"></i> Güncelle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Category/CreateCategory" class="btn btn-primary mt-3">
    <i class="fas fa-plus"></i> Yeni Kategori Oluştur
</a>

<script>
    function deletedCategory(id){
            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {
      window.location.href="/Category/DeleteCategory/"+id;
      }
    });
    }
</script>

