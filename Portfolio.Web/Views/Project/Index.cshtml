@model List<Project>
@{
    ViewData["Title"] = "Projelerim";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover table-striped align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Proje Resmi</th>
            <th>Proje Adı</th>
            <th>Açıklama</th>
            <th>GitHub Url</th>
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td><img src="@item.ImageUrl" style="height:75px;width:75px; object-fit:cover;" /></td>
                <td>@item.ProjectName</td>
                <td>@item.Description</td>
                <td><a href="@item.GitHubUrl" target="_blank">Github Linki</a></td>
                <td>@item.Category.CategoryName</td>
                <td>
                    <button onclick="deletedProject(@item.ProjectId)" class="btn btn-sm btn-danger me-1">Sil</button>
                    <a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-sm btn-info text-white">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Project/CreateProject" class="btn btn-primary mt-3">Yeni Proje Oluştur</a>

<script>
    function deletedProject(id){
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href="/Project/DeleteProject/"+id;
            }
        });
    }
</script>
