@model List<Experience>
@{
    ViewData["Title"] = "Deneyimlerim";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover table-striped align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Ünvan</th>
            <th>Başlama Yılı</th>
            <th>Bitiş Yılı</th>
            <th>Şirket Adı</th>
            <th>Şehir</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Title</td>
                <td>@item.StartYear</td>
                <td>@item.EndYear</td>
                <td>@item.Company</td>
                <td>@item.City</td>
                <td>@item.Description</td>
                <td>
                    <button onclick="deletedExperience(@item.ExperienceId)" class="btn btn-sm btn-danger me-1">Sil</button>
                    <a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-sm btn-info text-white">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Experience/CreateExperience" class="btn btn-primary mt-3">Yeni Deneyim Bilgisi Oluştur</a>


<script>
    function deletedExperience(id){
            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal"
    }).then((result) => {
      if (result.isConfirmed) {
      window.location.href="/Experience/DeleteExperience/"+id;
      }
    });
    }
</script>

