@model List<Banner>
@{
    ViewData["Title"] = "Öne Çıkanlar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover table-striped align-middle text-center">
    <thead class="table-secondary">
        <tr>
            <th>#</th>
            <th>Görsel Url</th>
            <th>Ad Soyad</th>
            <th>Ünvan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td><img src="@item.CoverImageUrl" style="height:75px;width:75px; object-fit:cover;" /></td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>
                    <button onclick="deletedBanner(@item.BannerId)" class="btn btn-sm btn-danger me-1">Sil</button>
                    <a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-sm btn-info text-white">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Banner/CreateBanner" class="btn btn-primary mt-3">Yeni Öne Çıkan Oluştur</a>

<script>
    function deletedBanner(id){
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href="/Banner/DeleteBanner/"+id;
            }
        });
    }
</script>


