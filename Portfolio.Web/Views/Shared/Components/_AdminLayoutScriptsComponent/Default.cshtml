<script>
    $(document).on('click', '.show-detail', function () {
        var id = $(this).data('id');
        $.get('@Url.Action("ContentMessage", "Message")', { id: id })
            .done(function (html) {
                $('#infoModal .modal-body').html(html);
                $('#infoModal').modal('show');
            })
            .fail(function() {
                alert("Mesaj yüklenemedi!");
            });
    });
</script>