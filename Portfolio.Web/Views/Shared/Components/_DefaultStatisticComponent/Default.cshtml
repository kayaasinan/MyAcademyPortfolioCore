
@*
    Default Statistic Component
*@

<section id="stats" class="stats section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İstatistikler</h2>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.projectCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Proje Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.skillAverage" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Değerlendirme Ort.</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.totalMessageCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Gelen Mesajlar</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.companyCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Çalışılan Şirket Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section>