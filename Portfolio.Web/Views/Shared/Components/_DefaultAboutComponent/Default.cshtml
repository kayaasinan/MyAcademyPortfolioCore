@model About
@*
    Default About Component
*@
@{
    var today = DateTime.Today;
    var age = today.Year - Model.BirthDate.Year;
}

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>

    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 300px;" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.Title</h2>
                <p class="fst-italic py-3">
                    
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@Model.BirthDate.ToString("dd.MM.yyyy")</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@Model.WebSite</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@Model.PhoneNumber</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@Model.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Mezuniyet:</strong> <span>@Model.Graduation</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@(Model.IsAvailable ? "Uygun" : "Uygun Değil")</span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    @Model.Description
                </p>
            </div>
        </div>

    </div>

</section>